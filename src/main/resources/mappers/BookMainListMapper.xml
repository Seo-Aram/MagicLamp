<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.app.magiclamp.mapper.BookMainListMapper">

    <select id="selectByOption" resultType="com.app.magiclamp.model.bookMain.BookRequest">

        select c.cnt, r.star, b.* from tbl_book b left outer join (SELECT isbn, round(avg(star)) as star FROM project_lamp.tbl_review group by isbn order by isbn) r on b.isbn=r.isbn left outer join (select isbn, count(isbn) as cnt from tbl_review group by isbn) c on b.isbn=c.isbn

        <where>
            <if test="p2.searchType != null and p2.keyword != null">
                <if test="p2.searchType == 'isbn'">
                    <include refid="searchIsbn"/>
                </if>
                <if test="p2.searchType == 'title'">
                    <include refid="searchTitle"/>
                </if>
            </if>
        </where>

        order by pubdate desc limit #{p1} , 10

    </select>

    <sql id="searchIsbn">
        b.isbn like concat('%', #{p2.keyword}, '%')
    </sql>

    <sql id="searchTitle">
        title like concat('%', #{p2.keyword}, '%')
    </sql>

    <select id="selectByOptionTotalCount" parameterType="com.app.magiclamp.model.bookMain.BookSearchOption" resultType="Integer">

        select count(isbn) from tbl_book

        <where>
            <if test="searchType != null and keyword != null">
                <if test="searchType == 'isbn'">
                    <include refid="searchIsbn2"/>
                </if>
                <if test="searchType == 'title'">
                    <include refid="searchTitle2"/>
                </if>
            </if>
        </where>

    </select>

    <sql id="searchIsbn2">
        isbn like concat('%', #{keyword}, '%')
    </sql>

    <sql id="searchTitle2">
        title like concat('%', #{keyword}, '%')
    </sql>

</mapper>